{
    "name": "digitick",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "node scripts/dev-server.js",
        "start": "node scripts/dev-server.js",
        "typecheck": "tsc --noEmit",
        "typecheck:watch": "tsc --noEmit --watch",
        "lint": "biome lint --write .",
        "lint:ci": "biome lint .",
        "format": "biome format --write .",
        "format:check": "biome format .",
        "check": "biome check --write .",
        "check:ci": "biome check .",
        "build": "node scripts/build-esbuild.js"
    },
    "description": "Digitick - A web-based drum machine inspired by the Elektron Digitakt",
    "engines": {
        "node": ">=12"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "esbuild": "^0.19.4",
        "typescript": "^5.9.3"
    }
}
